#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    int a[100];
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }

    int minIndex = 0, maxIndex = 0;

    for (int i = 1; i < n; i++) {
        if (a[i] < a[minIndex]) minIndex = i;
        if (a[i] > a[maxIndex]) maxIndex = i;
    }

   
    int temp = a[minIndex];
    a[minIndex] = a[maxIndex];
    a[maxIndex] = temp;

   
    for (int i = 0; i < n; i++) {
        cout << a[i] << " ";
    }
}
//---------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of array elements: ";
    cin >> n;                 

    int a[100];

    cout << "Enter " << n << " array numbers, one per line:\n";
    for (int i = 0; i < n; i++) {
        cin >> a[i];           
    }

    int A;
    cout << "Enter number A: ";
    cin >> A;                 

    int count = 0;             
    for (int i = 0; i < n; i++) {
        if (a[i] > A) {          
            count++;           
        }
    }

    cout << "Number of elements greater than " << A << ": " << count << endl;

    return 0;
}


//--------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    int a[100];
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }

    int max1 = a[0];
    int max2 = a[0];

    
    for (int i = 1; i < n; i++) {
        if (a[i] > max1) {
            max1 = a[i];
        }
    }

    
    max2 = -1000000;
    for (int i = 0; i < n; i++) {
        if (a[i] != max1 && a[i] > max2) {
            max2 = a[i];
        }
    }

    cout << max2;
}
------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    int a[n];
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }

    bool found = false;

    for (int i = 0; i < n; i++) {
        if (a[i] == 0) {
            cout << "The first zero element has the number: " << i;
            found = true;
            break;
        }
    }

    if (!found) {
        cout << "The array contains no zero elements.";
    }
}
